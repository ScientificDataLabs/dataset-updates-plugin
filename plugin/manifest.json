{

  "manifest_version": 2,
  "name": "rupdate",
  "version": "1.0",

  "description": "Is this research updated",

  "icons": {
	  "48": "icons/rupdate-48.png"
  },
  "permissions": [
	  "http://api.crossref.org/",
	  "https://api.figshare.com/"
    ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["figshare_api.js", "rupdate.js"]
    }
  ]
}
